<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.CreateWork" android:id="@+id/frameLayout2">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10" android:id="@+id/title"
            android:hint='title' android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
    />
    <TextView
            android:text="Skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/title" app:layout_constraintStart_toStartOf="@+id/guideline2"
    />
    <CheckBox
            android:text="c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/skill1"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/guideline2"/>
    <CheckBox
            android:text="android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/skill2"
            app:layout_constraintTop_toBottomOf="@+id/skill1" app:layout_constraintStart_toStartOf="@+id/guideline2"
    />
    <CheckBox
            android:text="java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/skill3"
            app:layout_constraintTop_toBottomOf="@+id/skill2" app:layout_constraintStart_toStartOf="@+id/guideline2"/>
    <CheckBox
            android:text="swift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/skill4"
            app:layout_constraintTop_toBottomOf="@+id/skill3" app:layout_constraintStart_toStartOf="@+id/guideline2"/>
    <Button
            android:text="Post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/post"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/skill4"/>
    <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/group2"
                                            app:constraint_referenced_ids="skill3,textView2,skill2,post,title,skill4,skill1"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="144dp"
                                                android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="80dp"
                                                android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>